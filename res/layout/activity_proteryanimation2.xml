<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_property2_FloatEvaluator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FloatEvaluator的使用" />

        <Button
            android:id="@+id/btn_property_objectanimator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ObjectAnimator的高级用法" />
    </LinearLayout>

    <com.basedamo.protertyanimation.MyAnimView
        android:background="@android:color/white"
        android:id="@+id/mav_test"
        android:layout_width="match_parent"
        android:layout_height="200dip" />

</LinearLayout>