<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="原文：" />

        <EditText
            android:id="@+id/et_security_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加密结果：" />

        <TextView
            android:id="@+id/tv_security_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解密结果：" />

        <TextView
            android:id="@+id/tv_security_result2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />


        <Button
            android:id="@+id/btn_security_base64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base64 Encryption Decryption" />

        <Button
            android:id="@+id/btn_security_md5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MD5 Encryption" />

        <Button
            android:id="@+id/btn_security_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hashCode" />

        <Button
            android:id="@+id/btn_security_sha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sha1" />

        <Button
            android:id="@+id/btn_security_hmac_sha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hmac_sha1" />

    </LinearLayout>

</ScrollView>