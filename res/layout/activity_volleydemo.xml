<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="requestForString"
            android:text="访问文本资源" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="requestForStringPost"
            android:text="访问文本资源Post" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jsonRequest"
            android:text="访问JSON" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="imageRequest"
            android:text="访问图片资源" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="imageLoader"
            android:text="访问图片资源1(使用缓存)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="imageLoader2"
            android:text="访问图片资源2(使用缓存)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="networkImageView"
            android:text="访问图片资源3(NetworkImageView)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clear"
            android:text="清空" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回内容：" />

        <TextView
            android:id="@+id/tv_show_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/network_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>